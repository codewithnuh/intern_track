enum Role{
INTERN
ADMIN
}
enum Status{
PENDING_ONBOARDING
PENDING_APPROVAL
ACTIVE
DISAPPROVED
}
model user{
    id String @id @default(uuid())
    clerkId String
    email    String @default("") @unique()
    name      String @default("")
    role      Role @default(INTERN)
    status    Status @default(PENDING_ONBOARDING)
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())
    disapprovedAt DateTime?
    university       String?
    major            String?
    skills           String[]
    resumeUrl        String?
    portfolioUrl     String?
    department       String?
    startDate        DateTime?
    @@index([status, disapprovedAt])
}
